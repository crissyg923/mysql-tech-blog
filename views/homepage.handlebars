<div class="d-flex justify-content-center flex-column">
<div class="sitebanner">
<img src="/images/techtalk.png" alt="tech talk banner" width="100%" height="100%">
</div>
<h2 class="text-center mt-4 mb-3 recentposts">Recent Blog Posts</h2>
<div class="d-flex justify-content-center mx-5">
{{#each posts as |post| }}
<div class="card bg-dark m-2 cardstyle" style="width: 18rem;">
  <div class="card-body">
    <h4 class="card-title posttitle"> {{ post.title }}</h4>
    <p class="card-text"> {{ post.body }} </p>
    <p class="card-text"> Post by {{ user.name }} </p>
    <div class="text-center">
   <h6><a href="/blogpost/{{ post.id }}" class="card-link postlink">View Post</a></h6>
   </div>
  </div>
</div>
{{/each}}
</div>
<div class="text-center">
  <h3 class="mt-2"><a href="/allposts" class="allposts">View All Posts</a></h3>
</div>
</div>
